<%# app/views/imports/new.html.erb %>
<div class="px-4 py-8 sm:px-0" data-controller="import">
  <div class="max-w-3xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Import Restaurants</h2>
        <p class="mt-2 text-sm text-gray-500">Upload a JSON file to import multiple restaurants at once.</p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
        <%= link_to "Back to Imports", imports_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        <%= link_to "Back to Restaurants", restaurants_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    </div>

    <div id="import-results" class="hidden" data-import-target="results"></div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Upload JSON File</h3>
        
        <%= render 'imports/json_example' %>
        
        <%= render 'imports/form' %>
      </div>
    </div>
  </div>
</div>

<%= render 'imports/results' %>