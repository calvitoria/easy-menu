<%# app/views/imports/show.html.erb %>
<div class="px-4 py-8 sm:px-0">
  <div class="max-w-7xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Import Details</h2>
        <div class="mt-2 flex items-center space-x-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
            </div>
            <p class="ml-2 text-sm text-gray-600">
              <%= @import.import_type&.titleize || "Restaurant" %> Import
            </p>
          </div>
          <span class="text-sm text-gray-400">•</span>
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="ml-2 text-sm text-gray-600">
              <%= @import.created_at.strftime("%B %d, %Y at %H:%M") %>
            </p>
          </div>
        </div>
      </div>
      <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
        <%= link_to imports_path, class: "inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Imports
        <% end %>
        <%= link_to new_import_restaurants_path, class: "inline-flex items-center rounded-lg border border-transparent bg-gradient-to-r from-indigo-600 to-indigo-700 px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 hover-lift" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
          New Import
        <% end %>
      </div>
    </div>

    <% if @import.error_message %>
      <div class="mb-8 glass-effect border-l-4 border-red-500 rounded-r-lg p-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-red-800">Import Failed</h3>
            <div class="mt-2 text-sm text-red-700">
              <p><%= @import.error_message %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mb-8 glass-effect rounded-xl shadow-soft p-6 border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Import Status</h3>
          <div class="flex items-center space-x-4">
            <%= status_badge(@import.status) %>
            
            <% if @import.completed_at %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= distance_of_time_in_words(@import.created_at, @import.completed_at) %>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="text-right">
          <p class="text-sm text-gray-500">Audit Log ID</p>
          <p class="font-mono text-sm bg-gray-100 px-3 py-1.5 rounded-lg text-gray-700">
            <%= @import.id.truncate(12) %>
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="glass-effect rounded-xl shadow-soft p-6 border border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Timeline
        </h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Started</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @import.created_at.strftime("%H:%M:%S") %>
            </span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Completed</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @import.completed_at ? @import.completed_at.strftime("%H:%M:%S") : "—" %>
            </span>
          </div>
          
          <% if @import.completed_at %>
            <div class="pt-4 border-t border-gray-100">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Total Duration</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= distance_of_time_in_words(@import.created_at, @import.completed_at) %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="glass-effect rounded-xl shadow-soft p-6 border border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Records
        </h3>
        <div class="space-y-4">
          <% if @import.total_records %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Total Processed</span>
              <span class="text-lg font-bold text-gray-900"><%= @import.total_records %></span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Successful</span>
              <span class="text-lg font-bold text-green-600"><%= @import.successful_records || 0 %></span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Failed</span>
              <span class="text-lg font-bold text-red-600"><%= @import.failed_records || 0 %></span>
            </div>
            
            <% if @import.total_records > 0 %>
              <div class="pt-4 border-t border-gray-100">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm text-gray-600">Success Rate</span>
                  <span class="text-lg font-bold <%= success_rate_color(@import.successful_records.to_f / @import.total_records) %>">
                    <%= number_to_percentage((@import.successful_records.to_f / @import.total_records * 100), precision: 1) %>
                  </span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-green-500 h-2 rounded-full" style="width: <%= (@import.successful_records.to_f / @import.total_records * 100) %>%"></div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 italic">No record statistics available</p>
          <% end %>
        </div>
      </div>

      <div class="glass-effect rounded-xl shadow-soft p-6 border border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Actions
        </h3>
        <div class="space-y-3">
          <%= link_to restaurants_path, class: "w-full flex items-center justify-between px-4 py-3 bg-gradient-to-r from-blue-50 to-blue-100 border border-blue-200 rounded-lg hover:from-blue-100 hover:to-blue-200 transition-all duration-200 group" do %>
            <div class="flex items-center">
              <div class="p-1.5 bg-blue-100 rounded-lg mr-3 group-hover:bg-blue-200 transition-colors duration-200">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-blue-800">View Restaurants</span>
            </div>
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
          
          <%= link_to new_import_restaurants_path, class: "w-full flex items-center justify-between px-4 py-3 bg-gradient-to-r from-indigo-50 to-indigo-100 border border-indigo-200 rounded-lg hover:from-indigo-100 hover:to-indigo-200 transition-all duration-200 group" do %>
            <div class="flex items-center">
              <div class="p-1.5 bg-indigo-100 rounded-lg mr-3 group-hover:bg-indigo-200 transition-colors duration-200">
                <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-indigo-800">Run New Import</span>
            </div>
            <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
          
          <%= link_to imports_path, class: "w-full flex items-center justify-between px-4 py-3 bg-gradient-to-r from-gray-50 to-gray-100 border border-gray-200 rounded-lg hover:from-gray-100 hover:to-gray-200 transition-all duration-200 group" do %>
            <div class="flex items-center">
              <div class="p-1.5 bg-gray-100 rounded-lg mr-3 group-hover:bg-gray-200 transition-colors duration-200">
                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-800">All Imports</span>
            </div>
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <div class="glass-effect rounded-xl shadow-soft border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Import Details</h3>
        </div>
        <div class="p-6">
          <dl class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <dt class="text-sm font-medium text-gray-600">Import Type</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">
                  <%= @import.import_type&.titleize || "Restaurant" %>
                </span>
              </dd>
            </div>
            
            <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <dt class="text-sm font-medium text-gray-600">Created</dt>
              <dd class="text-sm text-gray-900">
                <%= @import.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </dd>
            </div>
            
            <% if @import.completed_at %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <dt class="text-sm font-medium text-gray-600">Completed</dt>
                <dd class="text-sm text-gray-900">
                  <%= @import.completed_at.strftime("%Y-%m-%d %H:%M:%S") %>
                </dd>
              </div>
            <% end %>
            
            <% if @import.details.present? %>
              <div class="pt-4">
                <h4 class="text-sm font-semibold text-gray-900 mb-3">Additional Details</h4>
                <div class="space-y-2">
                  <% @import.details.each do |key, value| %>
                    <% unless ['logs', 'summary', 'stats'].include?(key.to_s) %>
                      <div class="flex justify-between items-start py-2 border-b border-gray-100 last:border-0">
                        <dt class="text-sm font-medium text-gray-600"><%= key.to_s.titleize %></dt>
                        <dd class="text-sm text-gray-900 text-right max-w-xs break-words">
                          <% if value.is_a?(Hash) || value.is_a?(Array) %>
                            <pre class="text-xs bg-gray-50 p-2 rounded-lg overflow-x-auto"><code><%= JSON.pretty_generate(value) %></code></pre>
                          <% else %>
                            <%= value %>
                          <% end %>
                        </dd>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <div class="glass-effect rounded-xl shadow-soft border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Import Summary</h3>
        </div>
        <div class="p-6">
          <% if @import.details && @import.details['summary'] %>
            <div class="bg-gradient-to-r from-indigo-50 to-indigo-100 border border-indigo-200 rounded-lg p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-indigo-800"><%= @import.details['summary'] %></p>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @import.details && @import.details['stats'] %>
            <h4 class="text-sm font-semibold text-gray-900 mb-3">Detailed Statistics</h4>
            <div class="space-y-3">
              <% @import.details['stats'].each do |category, data| %>
                <% if data.is_a?(Hash) && data.present? %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <h5 class="text-sm font-medium text-gray-700 mb-2"><%= category.to_s.titleize %></h5>
                    <div class="grid grid-cols-3 gap-2">
                      <% data.each do |key, value| %>
                        <div class="text-center">
                          <p class="text-xs text-gray-500 mb-1"><%= key.to_s.titleize %></p>
                          <p class="text-sm font-semibold 
                            <%= key.to_s.include?('error') ? 'text-red-600' : 
                                key.to_s.include?('created') ? 'text-green-600' : 
                                key.to_s.include?('updated') ? 'text-blue-600' : 'text-gray-900' %>">
                            <%= value %>
                          </p>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 italic">No detailed statistics available</p>
          <% end %>
        </div>
      </div>
    </div>

    <% if @import.details && @import.details['logs'] && @import.details['logs'].any? %>
      <div class="glass-effect rounded-xl shadow-soft border border-gray-100 mb-8">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Import Logs</h3>
            <p class="text-sm text-gray-500 mt-1">
              <%= @import.details['logs'].length %> log entries
              <% error_count = @import.details['logs'].count { |log| log['level'] == 'ERROR' } %>
              <% if error_count > 0 %>
                <span class="text-red-600">(<%= error_count %> errors)</span>
              <% end %>
            </p>
          </div>
          <button type="button" onclick="toggleLogs()" class="text-sm text-indigo-600 hover:text-indigo-800 flex items-center">
            <span id="logs-toggle-text">Show logs</span>
            <svg id="logs-toggle-icon" class="ml-1 h-4 w-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="logs-container" class="hidden p-6">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                  <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @import.details['logs'].each do |log| %>
                  <tr class="<%= log['level'] == 'ERROR' ? 'bg-red-50' : '' %>">
                    <td class="px-3 py-3 whitespace-nowrap">
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= log['level'] == 'ERROR' ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                        <%= log['level'] == 'ERROR' ? '✗ Error' : '✓ Info' %>
                      </span>
                    </td>
                    <td class="px-3 py-3 text-sm text-gray-900">
                      <%= log['message'] %>
                      <% if log['details'] %>
                        <div class="mt-1 text-xs text-gray-500">
                          <%= JSON.generate(log['details']) %>
                        </div>
                      <% end %>
                    </td>
                    <td class="px-3 py-3 whitespace-nowrap text-xs text-gray-500">
                      <%= log['timestamp'].present? ? Time.parse(log['timestamp']).strftime("%H:%M:%S") : "—" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <script>
        function toggleLogs() {
          const container = document.getElementById('logs-container');
          const icon = document.getElementById('logs-toggle-icon');
          const text = document.getElementById('logs-toggle-text');
          
          if (container.classList.contains('hidden')) {
            container.classList.remove('hidden');
            icon.classList.add('rotate-180');
            text.textContent = 'Hide logs';
          } else {
            container.classList.add('hidden');
            icon.classList.remove('rotate-180');
            text.textContent = 'Show logs';
          }
        }
      </script>
    <% end %>
  </div>
</div>