<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <div class="flex items-center">
        <div class="h-16 w-16 rounded-full bg-indigo-100 flex items-center justify-center mr-4">
          <span class="text-indigo-600 font-bold text-2xl"><%= @menu.name[0].upcase %></span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @menu.name %></h1>
          <div class="mt-1 flex items-center space-x-4">
            <span class="text-gray-500">â€¢</span>
            <span class="text-sm text-gray-500"><%= @menu.menu_items.count %> menu items</span>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none space-x-3">
      <%= link_to 'Edit', edit_menu_path(@menu), class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= link_to 'Add Menu Item', new_menu_menu_item_path(@menu), class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= link_to 'Delete', menu_path(@menu), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this menu?' }, class: "inline-flex items-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Menu Information</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Details about the menu.</p>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu.description %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Active</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <% if @menu.active %>
                <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">Yes</span>
              <% else %>
                <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">No</span>
              <% end %>
            </dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Categories</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu.categories&.join(', ') %></dd>
          </div>
          <% if @menu.restaurant %>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Restaurant</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                <%= link_to @menu.restaurant.name, restaurant_path(@menu.restaurant), class: "text-indigo-600 hover:text-indigo-900" %>
              </dd>
            </div>
          <% end %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu.created_at.strftime('%B %d, %Y') %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="text-lg font-medium leading-6 text-gray-900">Menu Items</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Items available in this menu.</p>
          </div>
          <%= link_to 'Add Menu Item', new_menu_menu_item_path(@menu), class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-3 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      </div>

      <div class="border-t border-gray-200">
        <% if @menu.menu_items.any? %>
          <ul role="list" class="divide-y divide-gray-200">
            <% @menu.menu_items.each do |menu_item| %>
              <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                <div class="flex items-center justify-between gap-4">
                  <div class="min-w-0 flex-1">
                    <p class="truncate text-sm font-medium text-indigo-600">
                      <%= menu_item.name %>
                    </p>
                    <p class="mt-1 text-sm text-gray-500 max-h-10 overflow-hidden">
                      <%= truncate(menu_item.description.to_s, length: 90) %>
                    </p>
                  </div>
                  <div class="flex items-center space-x-4 whitespace-nowrap">
                    <span class="text-sm text-gray-500">$<%= sprintf('%.2f', menu_item.price) %></span>
                    <%= link_to 'View', menu_item_path(menu_item), class: "text-sm text-gray-500 hover:text-gray-700" %>
                    <%= link_to 'Remove',
                      remove_menu_item_menu_path(@menu, menu_item_id: menu_item.id),
                      data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to remove this item from the menu?' },
                      class: "text-sm text-red-600 hover:text-red-900" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-4 py-12 text-center">
            <h3 class="mt-2 text-sm font-medium text-gray-900">No menu items</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by adding a new menu item.</p>
            <div class="mt-6">
              <%= link_to 'New Menu Item', new_menu_menu_item_path(@menu), class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8 flex justify-end">
    <%= link_to 'Back to Menus', @menu.restaurant ? restaurant_menus_path(@menu.restaurant) : menus_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
  </div>
</div>
