<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <div class="flex items-center">
        <div class="h-16 w-16 rounded-full bg-indigo-100 flex items-center justify-center mr-4">
          <span class="text-indigo-600 font-bold text-2xl"><%= @menu_item.name[0].upcase %></span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @menu_item.name %></h1>
          <p class="mt-1 text-sm text-gray-500">$<%= sprintf('%.2f', @menu_item.price) %></p>
        </div>
      </div>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none space-x-3">
      <%= link_to 'Edit', edit_menu_item_path(@menu_item), class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= link_to 'Delete', menu_item_path(@menu_item), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this menu item?' }, class: 'inline-flex items-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2' %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Menu Item Information</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Details about the menu item.</p>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu_item.description %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Price</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">$<%= sprintf('%.2f', @menu_item.price) %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Dietary Information</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <div class="flex flex-col space-y-1">
                <% if @menu_item.vegan? %><span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800 w-min">Vegan</span><% end %>
                <% if @menu_item.vegetarian? %><span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 w-min">Vegetarian</span><% end %>
                <% if @menu_item.spicy? %><span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800 w-min">Spicy</span><% end %>
              </div>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Categories</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu_item.categories&.join(', ') %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @menu_item.created_at.strftime('%B %d, %Y') %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Part of Menus</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Menus that include this item.</p>
      </div>
      <div class="border-t border-gray-200">
        <% if @menu_item.menus.any? %>
          <ul role="list" class="divide-y divide-gray-200">
            <% @menu_item.menus.each do |menu| %>
              <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="min-w-0 flex-1">
                      <p class="truncate text-sm font-medium text-indigo-600"><%= menu.name %></p>
                      <p class="truncate text-sm text-gray-500"><%= menu.restaurant&.name %></p>
                    </div>
                  </div>
                  <div class="flex space-x-3">
                    <%= link_to 'View Menu', menu_path(menu), class: "text-sm text-gray-500 hover:text-gray-700" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-4 py-12 text-center text-sm text-gray-500">
            This menu item is not currently part of any menu.
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8 flex justify-end space-x-3">
    <%= link_to 'Back to Menu Items', menu_items_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
</div>
