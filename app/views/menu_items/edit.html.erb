<div class="md:flex md:items-center md:justify-between mb-8">
  <div class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Edit <%= @menu_item.name %></h2>
  </div>
  <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
    <%= link_to 'View Menu Item', menu_item_path(@menu_item), class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    <%= link_to 'Back to Menu Items', menu_items_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
</div>

<%= form_with(model: @menu_item, local: true, class: "space-y-6") do |form| %>
  <% if @menu_item.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu item from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% @menu_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Menu Item Details</h3>
        <p class="mt-1 text-sm text-gray-500">Basic information about the menu item.</p>
      </div>
      <div class="mt-5 md:col-span-2 md:mt-0">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-4">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6 grid grid-cols-3 gap-4">
            <div class="flex items-start">
              <div class="flex h-5 items-center">
                <%= form.check_box :vegan, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :vegan, class: "font-medium text-gray-700" %>
              </div>
            </div>
            <div class="flex items-start">
              <div class="flex h-5 items-center">
                <%= form.check_box :vegetarian, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :vegetarian, class: "font-medium text-gray-700" %>
              </div>
            </div>
            <div class="flex items-start">
              <div class="flex h-5 items-center">
                <%= form.check_box :spicy, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :spicy, class: "font-medium text-gray-700" %>
              </div>
            </div>
          </div>

          <div class="col-span-6">
            <%= form.label :categories, "Categories (comma-separated)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :categories, value: @menu_item.categories&.join(', '), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Separate categories with commas (e.g., "Appetizer, Main, Dessert").</p>
          </div>

          <div class="col-span-6">
            <%= label_tag :menu_ids, "Menus (comma-separated IDs)", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag :menu_ids, @menu_item.menus.ids.join(','), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Assign this item to menus by providing a comma-separated list of their IDs.</p>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <a href="<%= menu_item_path(@menu_item) %>" class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
      Cancel
    </a>
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
<% end %>
