guard "livereload" do
  # Reload the browser when assets are updated
  watch(%r{app/assets/builds/.*\.css})
  watch(%r{app/javascript/.*\.js})

  # Reload the browser when views are updated
  watch(%r{app/views/.*\.html\.erb})

  # Reload the browser when helpers are updated
  watch(%r{app/helpers/.*\.rb})
end
